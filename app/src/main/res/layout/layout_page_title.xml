<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBarSize"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivCalendar"
        android:layout_width="38.5dp"
        android:layout_height="38.5dp"
        android:layout_gravity="start"
        android:padding="10dp"
        android:src="@drawable/ic_calendar_black_19dp"
        android:visibility="invisible" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/blackAlpha20"
        app:tabTextColor="@color/colorTextPrimary" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="end"
        android:padding="13dp"
        android:src="@drawable/ic_search_black_17dp" />


</FrameLayout>