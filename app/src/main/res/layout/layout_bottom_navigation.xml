<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/colorPrimary"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <LinearLayout
        android:id="@+id/rlHome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rlCommunity"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_margin="3dp"
            android:src="@drawable/sel_btn_home_page" />

        <com.cs.eyepetizer.view.TypefaceTextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homepage"
            android:textColor="@color/sel_bottom_navigation_bar_radio_color"
            android:textSize="8dp"
            app:typeface="fzlLTypeface" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlCommunity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/rlHome"
        app:layout_constraintRight_toLeftOf="@id/rlRelease"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivCommunity"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_margin="3dp"
            android:src="@drawable/sel_btn_community" />

        <com.cs.eyepetizer.view.TypefaceTextView
            android:id="@+id/tvCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/community"
            android:textColor="@color/sel_bottom_navigation_bar_radio_color"
            android:textSize="8dp"
            app:typeface="fzlLTypeface" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/rlCommunity"
        app:layout_constraintRight_toLeftOf="@id/rlNotification"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivRelease"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_release_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rlNotification"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/rlRelease"
        app:layout_constraintRight_toLeftOf="@id/rlMine"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_margin="3dp"
            android:src="@drawable/sel_btn_notification"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.cs.eyepetizer.view.TypefaceTextView
            android:id="@+id/tvNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textColor="@color/sel_bottom_navigation_bar_radio_color"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ivNotification"
            app:layout_constraintStart_toStartOf="@id/ivNotification"
            app:layout_constraintTop_toBottomOf="@id/ivNotification"
            app:typeface="fzlLTypeface" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlMine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/rlNotification"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMine"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_margin="3dp"
            android:src="@drawable/sel_btn_mine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.cs.eyepetizer.view.TypefaceTextView
            android:id="@+id/tvMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine"
            android:textColor="@color/sel_bottom_navigation_bar_radio_color"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ivMine"
            app:layout_constraintStart_toStartOf="@id/ivMine"
            app:layout_constraintTop_toBottomOf="@id/ivMine"
            app:typeface="fzlLTypeface" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>